@model Schronisko.Models.Adopcja

@{
    ViewData["Title"] = "Adopt";
}

<h1>Formularz adopcyjny</h1>

<h4>@ViewBag.Message</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Adopt">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Imie" class="control-label"></label>
                <input asp-for="Imie" class="form-control" />
                <span asp-validation-for="Imie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nazwisko" class="control-label"></label>
                <input asp-for="Nazwisko" class="form-control" />
                <span asp-validation-for="Nazwisko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wiek" class="control-label"></label>
                <input asp-for="Wiek" class="form-control" />
                <span asp-validation-for="Wiek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefon" class="control-label"></label>
                <input asp-for="Telefon" class="form-control" />
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label asp-for="TypMieszkania" class="control-label"></label>
                <div>
                    <input type="radio" asp-for="TypMieszkania" class="form-check-input" value="dom" />
                    <label class="form-check-label" for="TypMieszkania">dom</label>
                </div>
                <div>
                    <input type="radio" asp-for="TypMieszkania" class="form-check-input" value="mieszkanie" />
                    <label class="form-check-label" for="TypMieszkania">mieszkanie</label>
                </div>
                <span asp-validation-for="TypMieszkania" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label asp-for="Ogrod" class="control-label"></label>
                <div>
                    <input type="radio" asp-for="Ogrod" class="form-check-input" value="tak" />
                    <label class="form-check-label" for="Ogrod">tak</label>
                </div>
                <div>
                    <input type="radio" asp-for="Ogrod" class="form-check-input" value="nie" />
                    <label class="form-check-label" for="Ogrod">nie</label>
                </div>
                <span asp-validation-for="Ogrod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IloscOsob" class="control-label"></label>
                <input asp-for="IloscOsob" class="form-control" />
                <span asp-validation-for="IloscOsob" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label asp-for="Doswiadczenie" class="control-label"></label>
                <div>
                    <input type="radio" asp-for="Doswiadczenie" class="form-check-input" value="tak" />
                    <label class="form-check-label" for="Doswiadczenie">tak</label>
                </div>
                <div>
                    <input type="radio" asp-for="Doswiadczenie" class="form-check-input" value="nie" />
                    <label class="form-check-label" for="Doswiadczenie">nie</label>
                </div>
                <span asp-validation-for="Doswiadczenie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AktualneZwierzeta" class="control-label"></label>
                <input asp-for="AktualneZwierzeta" class="form-control" />
                <span asp-validation-for="AktualneZwierzeta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
